api:
  dashboard: true
  insecure: true
  debug: false
entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  webSecure:
    address: ":443"
serversTransport:
  insecureSkipVerify: true
providers:
  docker:
    exposedByDefault: false
    network: homelab
  file:
    filename: /dynamic.yml
    watch: true
certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ TRAEFIK_CF_API_EMAIL }}
      storage: /data/acme.json
      caServer: https://acme-v02.api.letsencrypt.org/directory
      dnsChallenge:
        provider: cloudflare
        delayBeforeCheck: 10
